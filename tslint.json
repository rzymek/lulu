{
    "extends": "tslint:recommended",
    "rules":{
        "arrow-parens": false,
        "quotemark": [true, "single", "jsx-double"],
        "interface-name": [true, "never-prefix"],
        "no-unused-variable": [true, "react"],
        "no-var-requires": false /* workaround for require'ing pegjs parser */
    }
}